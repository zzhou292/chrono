//
// Schema file that defines contact information
//  - contact data is defined as a list of ContactData, which contains the body index, total force, total torque, and contact count.
// 
// =============================================================================

namespace SynFlatBuffers.Contact;

table ContactData {
  body_index:uint;
  rank:uint;
  total_force_x:double;
  total_force_y:double;
  total_force_z:double;
  total_torque_x:double;
  total_torque_y:double;
  total_torque_z:double;
}

table State {
  time:double;
  num_contacts:uint;
  contacts:[ContactData];
}

root_type State; 